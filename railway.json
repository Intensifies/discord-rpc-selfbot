{
  "$schema": "https://railway.com/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "nixpacksPlan": {
      "providers": ["node"],
      "phase": {
        "setup": {
          "nixPkgs": ["nodejs"]
        },
        "install": {
          "dependsOn": ["setup"],
          "cmds": ["npm ci"]
        },
        "build": {
          "dependsOn": ["install"],
          "cmds": ["npm run build"]
        }
      }
    },
    "watchPatterns": ["src/**"]
  },
  "deploy": {
    "startCommand": "npm run prod"
  }
}
